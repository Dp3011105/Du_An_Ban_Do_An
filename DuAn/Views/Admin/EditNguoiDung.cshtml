@model DuAn.Models.ViewModels.EditUserViewModel


@{
    Layout = "~/views/shared/_AdminLayout.cshtml";
    ViewData["Title"] = "";
}
<h2>@ViewData["Title"]</h2>

<form method="post" asp-action="EditNguoiDung">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="FirstName">Họ</label>
        <input type="text" class="form-control" id="FirstName" name="FirstName" value="@Model.FirstName" />
    </div>

    <div class="form-group">
        <label for="LastName">Tên</label>
        <input type="text" class="form-control" id="LastName" name="LastName" value="@Model.LastName" />
    </div>

    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" />
    </div>

    <div class="form-group">
        <label for="DateOfBirth">Ngày sinh</label>
        <input type="date" class="form-control" id="DateOfBirth" name="DateOfBirth" value="@Model.DateOfBirth?.ToString("yyyy-MM-dd")" />
    </div>

    <div class="form-group">
        <label for="Address">Địa chỉ</label>
        <input type="text" class="form-control" id="Address" name="Address" value="@Model.Address" />
    </div>



    <div class="form-group">
        <label for="Nationality">Quốc tịch</label>
        <input type="text" class="form-control" id="Nationality" name="Nationality" value="@Model.Nationality" />
    </div>

    <div class="form-group">
        <label for="Roles">Roles</label>
        <select name="SelectedRoles" id="Roles" class="form-control" multiple="multiple">
            @foreach (var role in Model.AvailableRoles)
            {
                <option value="@role.Value" selected="@role.Selected">@role.Text</option>
            }
        </select>
    </div>




    <div class="form-group">
        <button type="submit" class="btn btn-primary">Cập nhật</button>
    </div>
</form>
