@model Dish
@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<style>
    /* Đảm bảo các thành phần trong view đồng bộ với light/dark mode */
    body.light .card {
        background-color: white;
        color: black;
    }

    body.dark .card {
        background-color: #1f1f1f;
        color: white;
    }

    body.light .text-muted {
        color: #6c757d !important;
    }

    body.dark .text-muted {
        color: #a0a0a0 !important;
    }

    body.light .text-primary {
        color: #0d6efd !important;
    }

    body.dark .text-primary {
        color: #4dabf7 !important;
    }

    body.light .text-danger {
        color: #dc3545 !important;
    }

    body.dark .text-danger {
        color: #ff6b6b !important;
    }

    body.light .text-success {
        color: #28a745 !important;
    }

    body.dark .text-success {
        color: #2ecc71 !important;
    }

    body.light .btn-primary {
        background-color: #0d6efd;
        border-color: #0d6efd;
    }

        body.light .btn-primary:hover {
            background-color: #0b5ed7;
            border-color: #0b5ed7;
        }

    body.dark .btn-primary {
        background-color: #4dabf7;
        border-color: #4dabf7;
    }

        body.dark .btn-primary:hover {
            background-color: #3398e3;
            border-color: #3398e3;
        }

    body.light .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        body.light .btn-secondary:hover {
            background-color: #5c636a;
            border-color: #5c636a;
        }

    body.dark .btn-secondary {
        background-color: #444;
        border-color: #444;
    }

        body.dark .btn-secondary:hover {
            background-color: #555;
            border-color: #555;
        }

    body.light .form-control {
        background-color: white;
        color: black;
        border-color: #ced4da;
    }

    body.dark .form-control {
        background-color: #333;
        color: white;
        border-color: #555;
    }

    body.light .shadow {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }

    body.dark .shadow {
        box-shadow: 0 0.5rem 1rem rgba(255, 255, 255, 0.1) !important;
    }

    /* Tùy chỉnh giao diện */
    .product-card {
        max-width: 900px;
        margin: 0 auto;
    }

    .product-image {
        object-fit: cover;
        height: 100%;
        max-height: 400px;
        border-radius: 8px 0 0 8px;
    }

    .product-details {
        padding: 20px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

        .product-details h1 {
            font-size: 2rem;
            margin-bottom: 15px;
        }

        .product-details p, .product-details h5 {
            margin-bottom: 10px;
        }

    .form-group label {
        margin-bottom: 5px;
    }

    .form-control {
        max-width: 100px;
    }

    .btn {
        padding: 10px;
        font-weight: bold;
    }
</style>

<div class="container my-5">
    <div class="card product-card shadow">
        <div class="row g-0">
            <!-- Hình ảnh bên trái -->
            <div class="col-md-6">
                <img src="@Model.DuongDanHinh" class="product-image img-fluid" alt="@Model.TenMonAn">
            </div>

            <!-- Thông tin bên phải -->
            <div class="col-md-6">
                <div class="product-details">
                    <div>
                        <h1 class="text-primary fw-bold">@Model.TenMonAn</h1>
                        <h5 class="text-primary">Mô tả:</h5>
                        <p class="text-muted">@Model.MoTa</p>
                        <h5 class="text-danger fw-bold">Giá:</h5>
                        <p class="text-danger">@Model.Gia.ToString("N0") VND</p>
                        <h5 class="text-success fw-bold">Số lượng còn lại:</h5>
                        <p class="text-success">@Model.Soluong</p>
                    </div>

                    <!-- Form thêm vào giỏ hàng -->
                    <form action="@Url.Action("AddMonAn", "ShoppingCart")" method="post" class="mt-3">
                        <input type="hidden" name="maMonAn" value="@Model.MaMonAn" />
                        <div class="form-group">
                            <label for="soLuong" class="fw-bold">Số lượng:</label>
                            <input type="number" name="soLuong" id="soLuong" value="1" min="1" max="@Model.Soluong" class="form-control" required />
                        </div>
                        <button type="submit" class="btn btn-primary mt-3 w-100">Thêm vào giỏ hàng</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <a href="@Url.Action("Index", "Client")" class="btn btn-secondary">Quay lại danh sách</a>
    </div>
</div>